  using namespace std;
  
  int main() {
      const int rows = 3;
      const int cols = 4;
      int arr[rows][cols]; 
      
      for (int j = 0; j < cols + 2; ++j) {
          arr[0][j] = j + 1; 
      }
      cout << "Mảng sau khi ghi tràn:" << endl;
      for (int i = 0; i < rows; ++i) {
          for (int j = 0; j < cols; ++j) {
              cout << arr[i][j] << " ";
          }
          cout << endl;
      }
  
      return 0;
  }
